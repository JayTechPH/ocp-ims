<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add User</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      max-width: 700px;
      margin: auto;
      background: #f4f4f4;
    }
    h2, h3 {
      color: #333;
    }
    form {
      margin-bottom: 20px;
      background: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    select, button {
      padding: 6px 10px;
      margin-top: 10px;
    }
    button {
      cursor: pointer;
      margin-right: 10px;
    }
    .delete-btn {
      background: red;
      color: white;
      border: none;
      padding: 4px 8px;
      border-radius: 4px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      margin-top: 10px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }
    #result {
      margin-top: 10px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <h2>Create New User</h2>

  <form id="userForm">
    <label for="role">Role:</label>
    <select id="role" name="role">
      <option value="user" selected>User</option>
      <option value="admin">Admin</option>
    </select>
    <br>
    <button type="button" onclick="location.href='/dashboard'">‚¨Ö Back</button>
    <button type="submit">‚ûï Create User</button>
    <button type="button" onclick="loadUsers()">üë• Show All Users</button>
  </form>

  <div id="result"></div>

  <h3>All Users</h3>
  <table id="userTable">
    <thead>
      <tr>
        <th>Username</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <script>
    function generateUsername() {
      return 'user' + Math.floor(Math.random() * 10000);
    }

    async function loadUsers() {
      const res = await fetch('/api/users');
      const users = await res.json();
      const tbody = document.querySelector('#userTable tbody');
      tbody.innerHTML = '';

      users.forEach(user => {
        tbody.innerHTML += `
          <tr>
            <td>${user.username}</td>
            <td>${user.role}</td>
            <td><button class="delete-btn" onclick="deleteUser('${user.username}')">Delete</button></td>
          </tr>`;
      });
    }

    async function deleteUser(username) {
      if (!confirm(`Delete user "${username}"?`)) return;

      const res = await fetch(`/api/deleteuser/${username}`, { method: 'DELETE' });
      const data = await res.json();
      document.getElementById('result').innerText = res.ok
        ? `üóëÔ∏è Deleted: ${username}`
        : `‚ùå Error: ${data.error}`;
      loadUsers();
    }

    document.getElementById('userForm').addEventListener('submit', async e => {
      e.preventDefault();

      const username = generateUsername();
      const password = username;
      const role = document.getElementById('role').value;

      const res = await fetch('/api/adduser', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({ username, password, role })
      });

      const data = await res.json();
      document.getElementById('result').innerText = res.ok
        ? `‚úÖ Created: ${username} (${role})`
        : `‚ùå Error: ${data.error}`;
      if (res.ok) loadUsers();
    });
  </script>

</body>
</html>
